<h1>Rooms</h1>

<table class="table">
  <thead class="bg-success">
    <th>Room number</th>
      <th>Availibility</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_number %></td>
        <td><%= room.availibility %></td>
        <td><%= room.category.name %></td>
        <td><%= link_to 'Show', room_path(room)  %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room_path(room), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

