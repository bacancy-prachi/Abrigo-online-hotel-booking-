<p id="notice"><%= notice %></p>

<h1>Room Bookings</h1>

<table class="table">
  <thead class="bg-success">
    <tr>
      <th>Email</th>
      <th>Hotel</th>
      <th>Check in</th>
      <th>Check out</th>
      <th>Room</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_bookings.each do |room_booking| %>
      <tr>
        <td><%= room_booking.booking.user.email %></td>
        <td><%= room_booking.room.hotel.name %></td>
        <td><%= room_booking.check_in %></td>
        <td><%= room_booking.check_out %></td>
        <td><%= room_booking.room.room_number %></td>
        <td><%= room_booking.room.category.name %></td>
        <td><%= link_to 'Show', room_booking %></td>
        <td><%= link_to 'Edit', edit_room_booking_path(room_booking) %></td>
        <td><%= link_to 'Destroy', room_booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
<br>

<%#= link_to 'New Room Booking', new_booking_path %>
<div>
<%= will_paginate @room_bookings, renderer: BootstrapPagination::Rails %>
</div>