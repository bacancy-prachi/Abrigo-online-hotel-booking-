

<p>
  <strong>Name:</strong>
  <%= @hotel.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @hotel.address %>
</p>

<% if @hotel.image.present? %>
<p>
<%= image_tag(@hotel.image,) %>
</p>
<% else %>
<p> Image not uploaded </p>
<% end %>

<p>
  <strong>Location:</strong>
  <%= @hotel.location.city%>
</p>
<br>
<% if current_user %>
<%= link_to 'book now!', bookings_path %>
<% end %>
<% if current_user && current_user.admin %>
<%= link_to 'Edit', edit_hotel_path(@hotel) %> 
<% end %>
<br>
<%= link_to 'Back', hotels_path %>
